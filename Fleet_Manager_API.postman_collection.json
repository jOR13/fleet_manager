									"disabled": true
								},
								{
									"key": "model",
									"value": "",
									"description": "Filter by model",
									"disabled": true
								},
								{
									"key": "status",
									"value": "",
									"description": "Filter by status (active, inactive, in_maintenance)",
									"disabled": true
								}
							]
						},
						"description": "Get paginated list of vehicles with optional filters"
					},
					"response": []
				},
